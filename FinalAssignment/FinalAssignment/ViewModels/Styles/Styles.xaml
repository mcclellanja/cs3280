<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FinalAssignment.ViewModels.Styles">

    <!--Typographical Styles-->
    <Style x:Key="TitleText" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="MS UI Gothic" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="Margin" Value="10" />
    </Style>

    <!--Theme-->
    <SolidColorBrush Color="#FFC8D5B9" x:Key="PrimaryColor" />
    <SolidColorBrush Color="#FF32A287" x:Key="HighlightColor" />
    <SolidColorBrush Color="#FF958D83" x:Key="ConstrastColor" />
    <SolidColorBrush Color="#FF70C1B3" x:Key="AccentColor" />
    <SolidColorBrush Color="#FF247BA0" x:Key="DarkAccentColor" />

</ResourceDictionary>